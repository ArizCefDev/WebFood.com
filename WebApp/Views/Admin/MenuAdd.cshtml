@model DTO.EntityDTO.MenuDTO
@{
    ViewData["Title"] = "MenuAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="xs">
    <h3>Yeni Form</h3>
    <div class="well1 white">
        <form method="post" class="form-floating ng-pristine ng-invalid ng-invalid-required ng-valid-email ng-valid-url ng-valid-pattern" novalidate="novalidate" ng-submit="submit()">
            <fieldset>
                <div class="form-group">
                    <label class="control-label">Foto</label>
                    <input type="text" asp-for="Image" class="form-control1 ng-invalid ng-invalid-required ng-touched" ng-model="model.name" required="">
                </div>
                <div class="form-group">
                    <label class="control-label">Başlıq</label>
                    <input type="text" asp-for="Title" class="form-control1 ng-invalid ng-valid-email ng-invalid-required ng-touched" ng-model="model.email" required="">
                </div>
                <div class="form-group">
                    <label class="control-label">Qiymət</label>
                    <input type="text" asp-for="Price" class="form-control1 ng-invalid ng-invalid-required ng-touched" ng-model="model.password" required="">
                </div>
                <div class="form-group">
                    <label class="control-label">Endirimli</label>
                    <input type="text" asp-for="Discount" class="form-control1 ng-invalid ng-invalid-required ng-touched" ng-model="model.password" required="">
                </div>
                <div class="form-group">
                    <label class="control-label">Gram</label>
                    <input type="text" asp-for="Gram" class="form-control1 ng-invalid ng-invalid-required ng-touched" ng-model="model.password" required="">
                </div>
                <div class="form-group">
                    <label class="control-label">Kalori</label>
                    <input type="text" asp-for="Calori" class="form-control1 ng-invalid ng-invalid-required ng-touched" ng-model="model.password" required="">
                </div>
                <div class="form-group">
                    <label class="control-label">Status</label>
                    <select asp-for="Status" class="form-control1 ng-invalid ng-invalid-required ng-touched">
                        <option>special</option>
                        <option>standart</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Kateqoriya</label>
                    @Html.DropDownListFor(x=>x.CategoryID,(IEnumerable<SelectListItem>) ViewBag.c,new {@class="form-control1 ng-invalid ng-invalid-required ng-touched"})
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Əlavə et</button>
                    <button type="reset" class="btn btn-default">Sıfırla</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>

