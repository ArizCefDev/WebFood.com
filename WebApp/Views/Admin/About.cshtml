@model IEnumerable<DTO.EntityDTO.AboutDTO>
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="xs">
    <h3>Cədvəllər</h3>
    @if (ViewBag.count == 0)
    {
        <a asp-controller="Admin" asp-action="AboutAdd" class="btn btn-info">Yeni</a>
    }
    <div class="panel panel-warning" data-widget="{&quot;draggable&quot;: &quot;false&quot;}" data-widget-static="">
        <div class="panel-heading">
            <h2>Haqqımızda Cədvəli</h2>
            <div class="panel-ctrls" data-actions-container="" data-action-collapse="{&quot;target&quot;: &quot;.panel-body&quot;}"><span class="button-icon has-bg"><i class="ti ti-angle-down"></i></span></div>
        </div>
        <div class="panel-body no-padding" style="display: block;">
            <table class="table table-striped">
                <thead>
                    <tr class="warning">
                        <th>#</th>
                        <th>Foto</th>
                        <th>Başlıq</th>
                        <th>Mətn</th>
                        <th>Redaktə</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td style="width:20%"><img src="~/images/@item.ImageURL" style="width:100%; height:100%" /></td>
                            <td>@item.Title</td>
                            <td>@item.Text</td>
                            <td>
                                <a asp-controller="Admin" asp-action="AboutUpdate" asp-route-id="@item.ID" class="btn btn-primary">Redaktə</a>
                            </td>
                            <td>
                                <a asp-controller="Admin" asp-action="AboutDelete" asp-route-id="@item.ID" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

