@model IEnumerable<DTO.EntityDTO.MenuDTO>

<section class="menu" id="menu">
    <h1 class="heading">Özəl <span>menyular</span></h1>
    <div class="box-container">
        @foreach (var item in Model)
        {
            <div class="box">
                <div class="box-head">
                    <img src="@item.Image" alt="menu" />
                    <span class="menu-category">@item.CategoryName</span>
                    <h3>@item.Title</h3>
                    <div class="price">@item.Price ₼ <span>@item.Discount ₼</span></div>
                </div>
                <div class="box-bottom">
                    <a href="#" class="btn">sifarış ver</a>
                </div>
            </div>
        }
    </div>
</section>