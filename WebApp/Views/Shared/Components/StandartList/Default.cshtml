@model IEnumerable<DTO.EntityDTO.MenuDTO>

<section class="products" id="products">
    <h1 class="heading">Standart <span>menyular</span></h1>
    <div class="box-container">
        @foreach (var item in Model)
        {
            <div class="box">
                <div class="box-head">
                    <span class="title">@item.CategoryName</span>
                    <a href="#" class="name">@item.Title</a>
                </div>
                <div class="image">
                    <img src="@item.Image" alt="products" />
                </div>
                <div class="box-bottom">
                    <div class="info">
                        <b class="price">@item.Price ₼ </b>
                        <span class="amount">@item.Gram / @item.Calori</span>
                    </div>
                    <div class="product-btn">
                        <a href="#">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>