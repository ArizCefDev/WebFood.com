@model IEnumerable<DTO.EntityDTO.MenuDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<section class="menu" id="menu">
    <h1 class="heading">Özəl <span>menyular</span></h1>
    <div class="box-container">
        @foreach (var item in Model.Where(x => x.Status == "special"))
        {
            <div class="box">
                <div class="box-head">
                    <img src="@item.Image" alt="menu" />
                    <span class="menu-category">@item.CategoryName</span>
                    <h3>@item.Title</h3>
                    <div class="price">@item.Price ₼ <span>@item.Discount ₼</span></div>
                </div>
                <div class="box-bottom">
                    <a href="#" class="btn">sifarış ver</a>
                </div>
            </div>
        }
    </div>
</section>

<section class="products" id="products">
    <h1 class="heading">Standart <span>menyular</span></h1>
    <div class="box-container">
        @foreach (var item in Model.Where(x => x.Status == "standart"))
        {
            <div class="box">
                <div class="box-head">
                    <span class="title">@item.CategoryName</span>
                    <a href="#" class="name">@item.Title</a>
                </div>
                <div class="image">
                    <img src="@item.Image" alt="products" />
                </div>
                <div class="box-bottom">
                    <div class="info">
                        <b class="price">@item.Price ₼ </b>
                        <span class="amount">@item.Gram / @item.Calori</span>
                    </div>
                    <div class="product-btn">
                        <a href="#">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>